{
  "name": "@quojs/core",
  "version": "0.1.0",
  "description": "A modern predictable state container built on the idea of channels, events, and payloads, giving you strongly typed, expressive actions",
  "scripts": {
    "dev": "vite",
    "lint": "node ../../tools/repo-tools/bin/repo-eslint.cjs --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "node ../../tools/repo-tools/bin/repo-eslint.cjs --fix",
    "test": "pnpm vitest --coverage --watch=false",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepublishOnly": "node ../../common/scripts/copy-license.js"
  },
  "license": "MPL-2.0",
  "author": {
    "name": "Manu Ramirez <@pixerael>",
    "email": "manu@quojs.dev"
  },
  "maintainers": [],
  "homepage": "https://github.com/quojs/quojs#readme",
  "keywords": [
    "state",
    "store",
    "react",
    "redux-alternative",
    "quojs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/quojs/quojs.git"
  },
  "bugs": {
    "url": "https://github.com/quojs/quojs/issues"
  },
  "main": "dist/quojs.cjs.js",
  "module": "dist/quojs.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "!dist/**/*.map"
  ],
  "private": false,
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=18.18"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/quojs.cjs.js",
      "import": "./dist/quojs.esm.js"
    }
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@quojs/repo-tools": "workspace:*",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.12",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "vite-plugin-banner": "0.8.1",
    "typescript": "~5.8.3",
    "vite": "^7.0.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}