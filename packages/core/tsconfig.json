{
  "extends": "../../tsconfig.base.json", // rootâ€‘level base
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "useDefineForClassFields": true,
    "downlevelIteration": false,
    "importHelpers": true,
    "noEmitHelpers": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "src/**/*.test.ts",
    "tests/**/*.test.ts"
  ]
}